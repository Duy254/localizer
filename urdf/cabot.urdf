<robot name="cabot">
  <material name="suitcase">
    <color rgba="0 0.7 0.7 1" />
  </material>
  <material name="black">
    <color rgba="0 0 0 1" />
  </material>

  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.215" />
      <geometry>
        <box size="0.49 0.30 0.43" />
      </geometry>
      <material name="suitcase" />
    </visual>
  </link>

  <link name="laser_link">
    <visual>
      <origin xyz="0 0 -0.025" />
      <geometry>
        <cylinder length="0.07" radius="0.02" />
      </geometry>
      <material name="black" />
    </visual>
  </link>

  <link name="kinect_link">
    <visual>
      <origin xyz="0 0 0" />
      <geometry>
        <box size="0.07 0.25 0.06" />
      </geometry>
      <material name="black" />
    </visual>
  </link>

  <link name="imu_link" />

  <joint name="imu_link_joint" type="fixed">
    <parent link="base_link" />
    <child link="imu_link" />
    <origin xyz="0 0 0" />
  </joint>

  <joint name="kinect_link_joint" type="fixed">
    <parent link="base_link" />
    <child link="kinect_link" />
    <origin xyz="0.165 0 0.46" />
  </joint>

  <joint name="laser_kinect_joint" type="fixed">
    <parent link="kinect_link" />
    <child link="laser_link" />
    <origin xyz="0 0.08 0.09" />
  </joint>
</robot>
